---
import Logo from "../content/logos/Logo.astro";
import LogoFb from "../content/logos/Facebook.astro";
import LogoIg from "../content/logos/Instagram.astro";
import LogoTt from "../content/logos/Tiktok.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<nav class="navbar bg-base-100 fixed top-0 left-0 right-0 z-50">
  <!-- Para pantallas pequeñas: Menú hamburguesa -->
  <div class="navbar-start lg:hidden md:w-1/3 w-auto">
    <div class="dropdown">
      <label tabindex="0" class="btn btn-ghost btn-circle">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 8h16M4 16h16"></path>
        </svg>
      </label>
      <ul
        tabindex="0"
        class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52"
      >
        <li><a href="/pagina1">Página 1</a></li>
        <li><a href="/pagina2">Página 2</a></li>
        <li><a href="/pagina3">Página 3</a></li>
      </ul>
    </div>
  </div>

  <!-- Logo -->
  <div class="navbar-center lg:navbar-start md:w-1/3 lg:w-auto grow justify-center">
    <a href="/" class="btn btn-ghost normal-case text-xl mr-10">
      <!-- Reemplaza con tu logo SVG -->
      <Logo height="42" />
    </a>
  </div>

  <!-- Enlaces de navegación (pantallas grandes) -->
  <div class="navbar-center hidden lg:flex">
    <ul class="menu menu-horizontal px-1">
      <li><a href="/pagina1">Planes</a></li>
      <li><a href="/pagina2">Cloud</a></li>
      <li><a href="/pagina3">ZoeCam</a></li>
      <li><a href="/pagina4">Pagos</a></li>
      <li><a href="/pagina4">Contratar</a></li>
      <li><a href="/pagina4">Otros servicios</a></li>
      <li><a href="/pagina4">Cobertura</a></li>
    </ul>
  </div>

  <!-- Botones de redes sociales -->
  <div class="navbar-end hidden lg:flex lg:w-1/3 md:w-1/3 md:flex">
    <a href="https://facebook.com" class="btn btn-ghost btn-circle">
      <span class="sr-only">Facebook</span>
      <!-- Icono de Facebook SVG -->
      <!-- Reemplaza con tu icono SVG de Facebook -->
      <LogoFb height="30" />
      <!-- Contenido del SVG -->
    </a>
  <a href="https://instagram.com" class="btn btn-ghost btn-circle">
    <span class="sr-only">Twitter</span>
    <!-- Icono de Twitter SVG -->
    <!-- Reemplaza con tu icono SVG de Twitter -->
    <LogoIg height="30" />
    <!-- Contenido del SVG -->
  </a>
  <a href="https://tiktok.com" class="btn btn-ghost btn-circle">
    <span class="sr-only">TikTok</span>
    <!-- Icono de Twitter SVG -->
    <!-- Reemplaza con tu icono SVG de Twitter -->
    <LogoTt height="30" />
    <!-- Contenido del SVG -->
  </a>
  </div>
</nav>

<!-- Agrega más iconos de redes sociales si es necesario -->
